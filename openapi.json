{
  "openapi": "3.0.1",
  "info": {
    "title": "Servidor MCP Trello",
    "description": "API para integração do ChatGPT com o Trello. Permite listar quadros e criar cartões.",
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "https://servidor-mcp-trello.onrender.com",
      "description": "Servidor Render"
    }
  ],
  "paths": {
    "/mcp": {
      "post": {
        "summary": "Endpoint principal MCP",
        "description": "Recebe requisições JSON-RPC do ChatGPT Agent ou Manus AI, permitindo listar quadros e criar cartões no Trello.",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "method": {
                    "type": "string",
                    "example": "list_boards"
                  },
                  "params": {
                    "type": "object",
                    "example": {
                      "list_id": "ID_DA_LISTA",
                      "name": "Novo Cartão",
                      "desc": "Descrição opcional do cartão"
                    }
                  }
                },
                "required": ["method"]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Requisição processada com sucesso",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "result": {
                      "type": "object"
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Erro de formato ou método não suportado"
          }
        }
      }
    },
    "/health": {
      "get": {
        "summary": "Health Check",
        "description": "Verifica se o servidor está online e responde com OK.",
        "responses": {
          "200": {
            "description": "Servidor ativo"
          }
        }
      }
    },
    "/trello/resource": {
      "get": {
        "summary": "Teste de listagem de quadros",
        "description": "Permite testar via navegador a listagem de quadros do Trello usando ?action=list_boards",
        "parameters": [
          {
            "name": "action",
            "in": "query",
            "required": true,
            "schema": {
              "type": "string",
              "example": "list_boards"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Lista de quadros retornada com sucesso"
          },
          "400": {
            "description": "Ação inválida"
          }
        }
      }
    }
  }
}
